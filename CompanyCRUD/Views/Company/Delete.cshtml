@model Company

<form method="post" asp-action="Delete">
	<input asp-for="ID" hidden />
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Delete Company</h2>
			<hr />
		</div>
		@*<div asp-validation-summary="All"></div>*@
		<div class="mb-3">
			<label asp-for="Name"></label>
			<input asp-for="Name" disabled class="form-control" />
		</div>
		<div class="mb-3">
			<label asp-for="Address"></label>
			<input asp-for="Address" disabled class="form-control" />
		</div>

		<dt>
			@Html.DisplayNameFor(model => model.CompanyEntries)
		</dt>
		<dd>
			<table class="table">
				<tr>
					<th>Field Name</th>
					<th>Value</th>
				</tr>
				@foreach (var item in Model.CompanyEntries)
				{
					<tr>
						<td>
							@Html.DisplayFor(modelItem => item.FieldName)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.Value)
						</td>
					</tr>
				}
			</table>
		</dd>
		<button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
		<a asp-controller="Company" asp-action="Index" class="btn btn-secondary" style="width:150px">
			Back to List
		</a>
	</div>
</form>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}
